{
    "name": "Telegram Share Extension",
    "description": "Comparte enlaces e imágenes fácilmente a Telegram usando Telegram Desktop o Bot API.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "storage",
        "downloads",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_popup": "options.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}