{
    "name": "Telegram Share Extension",
    "description": "Easily share links and images to Telegram using Telegram Desktop or Bot API.",
    "version": "1.0",
    "default_locale": "en",
    "author": "Ignacio Veiga",
    "homepage_url": "https://github.com/IgnacioVeiga/telegram-share-extension",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "storage",
        "downloads",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_popup": "options.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}